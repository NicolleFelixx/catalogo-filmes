<div class="row justify-content-center">
  <div class="col-md-8">
    
    <!-- Cabe√ßalho -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>‚ûï Novo Filme</h1>
      <%= link_to "‚Üê Voltar", movies_path, class: "btn btn-outline-secondary" %>
    </div>

    <!-- Card com o formul√°rio -->
    <div class="card shadow">
      <div class="card-body">
        
        <%= form_with(model: @movie, local: true) do |f| %>
          
          <!-- Exibir erros de valida√ß√£o -->
          <% if @movie.errors.any? %>
            <div class="alert alert-danger">
              <h5><%= pluralize(@movie.errors.count, "erro") %> impediram o cadastro:</h5>
              <ul class="mb-0">
                <% @movie.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <!-- Campo: T√≠tulo -->
          <div class="mb-3">
            <%= f.label :title, "T√≠tulo do Filme *", class: "form-label" %>
            <%= f.text_field :title, class: "form-control", 
                placeholder: "Ex: O Poderoso Chef√£o", 
                autofocus: true %>
          </div>

          <!-- Campo: Sinopse -->
          <div class="mb-3">
            <%= f.label :synopsis, "Sinopse *", class: "form-label" %>
            <%= f.text_area :synopsis, rows: 5, class: "form-control", 
                placeholder: "Descreva a hist√≥ria do filme..." %>
            <div class="form-text">Conte um pouco sobre o enredo do filme.</div>
          </div>

          <!-- Linha com 3 campos -->
          <div class="row">
            
            <!-- Campo: Ano de Lan√ßamento -->
            <div class="col-md-4 mb-3">
              <%= f.label :release_year, "Ano de Lan√ßamento *", class: "form-label" %>
              <%= f.number_field :release_year, class: "form-control", 
                  placeholder: "2024", 
                  min: 1900, 
                  max: 2100 %>
            </div>

            <!-- Campo: Dura√ß√£o -->
            <div class="col-md-4 mb-3">
              <%= f.label :duration, "Dura√ß√£o (minutos) *", class: "form-label" %>
              <%= f.number_field :duration, class: "form-control", 
                  placeholder: "120", 
                  min: 1 %>
            </div>

            <!-- Campo: Diretor -->
            <div class="col-md-4 mb-3">
              <%= f.label :director, "Diretor *", class: "form-label" %>
              <%= f.text_field :director, class: "form-control", 
                  placeholder: "Steven Spielberg" %>
            </div>
          </div>

          <!-- Campo: Poster (Imagem) - NOVO! -->
          <div class="mb-3">
            <%= f.label :poster, "Poster do Filme (Opcional)", class: "form-label" %>
            <%= f.file_field :poster, class: "form-control", accept: "image/*" %>
            <div class="form-text">
              Formatos aceitos: JPG, PNG, GIF. Tamanho m√°ximo: 5MB.
            </div>
          </div>

          <!-- Bot√µes -->
          <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">

          <!-- Bot√µes -->
          <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
            <%= link_to "Cancelar", movies_path, class: "btn btn-secondary" %>
            <%= f.submit "üíæ Cadastrar Filme", class: "btn btn-primary" %>
          </div>

        <% end %>

      </div>
    </div>

    <p class="text-muted mt-3"><small>* Campos obrigat√≥rios</small></p>

  </div>
</div>