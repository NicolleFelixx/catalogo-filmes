<div class="row justify-content-center">
  <div class="col-md-8">
    
    <!-- Cabe√ßalho -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>‚ûï Novo Filme</h1>
      <%= link_to "‚Üê Voltar", movies_path, class: "btn btn-outline-secondary" %>
    </div>

    <!-- Card com o formul√°rio -->
    <div class="card shadow">
      <div class="card-body">
        
        <%= form_with(model: @movie, local: true) do |f| %>
        
  
  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <!-- BUSCA COM IA - NOVO! -->
  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <div class="alert alert-info">
    <h6 class="mb-3">ü§ñ Busca Inteligente</h6>
    <p class="small mb-3">Digite o t√≠tulo do filme e clique em "Buscar na IA" para preencher os dados automaticamente!</p>
    
    <div class="input-group">
      <input 
        type="text" 
        id="ai-search-input" 
        class="form-control" 
        placeholder="Ex: Matrix, Inception, Avatar..."
        value="">
      <button 
        type="button" 
        id="ai-search-btn" 
        class="btn btn-primary">
        üîç Buscar na IA
      </button>
    </div>
    
    <div id="ai-loading" class="mt-2" style="display: none;">
      <small class="text-muted">
        ‚è≥ Buscando informa√ß√µes... aguarde 10-15 segundos...
      </small>
    </div>
    
    <div id="ai-error" class="alert alert-danger mt-2" style="display: none;"></div>
    <div id="ai-success" class="alert alert-success mt-2" style="display: none;"></div>
  </div>
  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  
  <!-- Exibir erros de valida√ß√£o -->
  <% if @movie.errors.any? %>

            <div class="alert alert-danger">
              <h5><%= pluralize(@movie.errors.count, "erro") %> impediram o cadastro:</h5>
              <ul class="mb-0">
                <% @movie.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <!-- Campo: T√≠tulo -->
          <div class="mb-3">
            <%= f.label :title, "T√≠tulo do Filme *", class: "form-label" %>
            <%= f.text_field :title, class: "form-control", 
                placeholder: "Ex: O Poderoso Chef√£o", 
                autofocus: true %>
          </div>

          <!-- Campo: Sinopse -->
          <div class="mb-3">
            <%= f.label :synopsis, "Sinopse *", class: "form-label" %>
            <%= f.text_area :synopsis, rows: 5, class: "form-control", 
                placeholder: "Descreva a hist√≥ria do filme..." %>
            <div class="form-text">Conte um pouco sobre o enredo do filme.</div>
          </div>

          <!-- Linha com 3 campos -->
          <div class="row">
            
            <!-- Campo: Ano de Lan√ßamento -->
            <div class="col-md-4 mb-3">
              <%= f.label :release_year, "Ano de Lan√ßamento *", class: "form-label" %>
              <%= f.number_field :release_year, class: "form-control", 
                  placeholder: "2024", 
                  min: 1900, 
                  max: 2100 %>
            </div>

            <!-- Campo: Dura√ß√£o -->
            <div class="col-md-4 mb-3">
              <%= f.label :duration, "Dura√ß√£o (minutos) *", class: "form-label" %>
              <%= f.number_field :duration, class: "form-control", 
                  placeholder: "120", 
                  min: 1 %>
            </div>

            <!-- Campo: Diretor -->
            <div class="col-md-4 mb-3">
              <%= f.label :director, "Diretor *", class: "form-label" %>
              <%= f.text_field :director, class: "form-control", 
                  placeholder: "Steven Spielberg" %>
            </div>
          </div>

          <div class="mb-3">
                <%= f.label :category_ids, "Categorias", class: "form-label" %>
                <div class="form-text mb-2">Selecione uma ou mais categorias para o filme:</div>
                
                <div class="row">
                  <% @categories.each do |category| %>
                    <div class="col-md-4 col-6">
                      <div class="form-check">
                        <%= f.check_box :category_ids, 
                            { multiple: true, checked: @movie.category_ids.include?(category.id), class: "form-check-input" }, 
                            category.id, 
                            nil %>
                        <%= f.label "category_ids_#{category.id}", category.name, class: "form-check-label" %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>

          <!-- Campo: Poster (Imagem) - NOVO! -->
          <div class="mb-3">
            <%= f.label :poster, "Poster do Filme (Opcional)", class: "form-label" %>
            <%= f.file_field :poster, class: "form-control", accept: "image/*" %>
            <div class="form-text">
              Formatos aceitos: JPG, PNG, GIF. Tamanho m√°ximo: 5MB.
            </div>
          </div>

          <!-- Bot√µes -->
          <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
            <%= link_to "Cancelar", movies_path, class: "btn btn-secondary" %>
            <%= f.submit "üíæ Cadastrar Filme", class: "btn btn-primary" %>
          </div>

        <% end %>

        <!-- Script para busca com IA -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  const searchInput = document.getElementById('ai-search-input');
  const searchBtn = document.getElementById('ai-search-btn');
  const loadingDiv = document.getElementById('ai-loading');
  const errorDiv = document.getElementById('ai-error');
  const successDiv = document.getElementById('ai-success');
  
  searchBtn.addEventListener('click', async function() {
    const title = searchInput.value.trim();
    
    // Valida√ß√£o
    if (!title) {
      errorDiv.textContent = 'Por favor, digite o t√≠tulo do filme.';
      errorDiv.style.display = 'block';
      successDiv.style.display = 'none';
      return;
    }
    
    // Limpar mensagens anteriores
    errorDiv.style.display = 'none';
    successDiv.style.display = 'none';
    loadingDiv.style.display = 'block';
    searchBtn.disabled = true;
    
    try {
      // Fazer requisi√ß√£o para a API
      const response = await fetch('/movies/fetch_ai_data', {
  method: 'POST',
  headers: {
    'Content-Type': 'application/json',
    'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
  },
  body: JSON.stringify({ title: title })
});
      const data = await response.json();
      
      loadingDiv.style.display = 'none';
      searchBtn.disabled = false;
      
      if (data.error) {
        // Se deu erro
        errorDiv.textContent = data.error;
        errorDiv.style.display = 'block';
      } else {
        // Sucesso! Preencher campos
        document.getElementById('movie_title').value = title;
        document.getElementById('movie_synopsis').value = data.synopsis;
        document.getElementById('movie_release_year').value = data.release_year;
        document.getElementById('movie_duration').value = data.duration;
        document.getElementById('movie_director').value = data.director;
        
        // Mostrar mensagem de sucesso
        successDiv.textContent = '‚úÖ Dados preenchidos com sucesso! Voc√™ pode editar antes de salvar.';
        successDiv.style.display = 'block';
        
        // Scroll suave at√© o t√≠tulo
        document.getElementById('movie_title').scrollIntoView({ behavior: 'smooth', block: 'center' });
      }
    } catch (error) {
      loadingDiv.style.display = 'none';
      searchBtn.disabled = false;
      errorDiv.textContent = 'Erro ao conectar com o servidor. Tente novamente.';
      errorDiv.style.display = 'block';
    }
  });
  
  // Permitir buscar com Enter
  searchInput.addEventListener('keypress', function(e) {
    if (e.key === 'Enter') {
      e.preventDefault();
      searchBtn.click();
    }
  });
});
</script>

      </div>
    </div>

    <p class="text-muted mt-3"><small>* Campos obrigat√≥rios</small></p>

  </div>
</div>