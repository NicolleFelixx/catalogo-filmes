<div class="row justify-content-center">
  <div class="col-md-8">
    
    <!-- Cabe√ßalho -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>‚úèÔ∏è Editar Filme</h1>
      <%= link_to "‚Üê Voltar", @movie, class: "btn btn-outline-secondary" %>
    </div>

    <!-- Card com o formul√°rio -->
    <div class="card shadow">
      <div class="card-body">
        
        <%= form_with(model: @movie, local: true) do |f| %>
          
          <!-- Exibir erros de valida√ß√£o -->
          <% if @movie.errors.any? %>
            <div class="alert alert-danger">
              <h5><%= pluralize(@movie.errors.count, "erro") %> impediram a atualiza√ß√£o:</h5>
              <ul class="mb-0">
                <% @movie.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <!-- Campo: T√≠tulo -->
          <div class="mb-3">
            <%= f.label :title, "T√≠tulo do Filme *", class: "form-label" %>
            <%= f.text_field :title, class: "form-control", autofocus: true %>
          </div>

          <!-- Campo: Sinopse -->
          <div class="mb-3">
            <%= f.label :synopsis, "Sinopse *", class: "form-label" %>
            <%= f.text_area :synopsis, rows: 5, class: "form-control" %>
          </div>

          <!-- Linha com 3 campos -->
          <div class="row">
            
            <!-- Campo: Ano de Lan√ßamento -->
            <div class="col-md-4 mb-3">
              <%= f.label :release_year, "Ano de Lan√ßamento *", class: "form-label" %>
              <%= f.number_field :release_year, class: "form-control", min: 1900, max: 2100 %>
            </div>

            <!-- Campo: Dura√ß√£o -->
            <div class="col-md-4 mb-3">
              <%= f.label :duration, "Dura√ß√£o (minutos) *", class: "form-label" %>
              <%= f.number_field :duration, class: "form-control", min: 1 %>
            </div>

            <!-- Campo: Diretor -->
            <div class="col-md-4 mb-3">
              <%= f.label :director, "Diretor *", class: "form-label" %>
              <%= f.text_field :director, class: "form-control" %>
            </div>
          </div>

          div class="mb-3">
                <%= f.label :category_ids, "Categorias", class: "form-label" %>
                <div class="form-text mb-2">Selecione uma ou mais categorias para o filme:</div>
                
                <div class="row">
                  <% @categories.each do |category| %>
                    <div class="col-md-4 col-6">
                      <div class="form-check">
                        <%= f.check_box :category_ids, 
                            { multiple: true, checked: @movie.category_ids.include?(category.id), class: "form-check-input" }, 
                            category.id, 
                            nil %>
                        <%= f.label "category_ids_#{category.id}", category.name, class: "form-check-label" %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>

          
               <!-- Campo: Poster (Imagem) - NOVO! -->
          <div class="mb-3">
            <%= f.label :poster, "Poster do Filme (Opcional)", class: "form-label" %>
            
            <!-- Mostrar imagem atual se existir -->
            <% if @movie.poster.attached? %>
              <div class="mb-2">
                <p class="text-muted small mb-1">Imagem atual:</p>
                <%= image_tag @movie.poster, style: "max-width: 200px; border-radius: 8px;" %>
              </div>
            <% end %>
            
            <%= f.file_field :poster, class: "form-control", accept: "image/*" %>
            <div class="form-text">
              <%= @movie.poster.attached? ? "Escolha uma nova imagem para substituir." : "Formatos aceitos: JPG, PNG, GIF." %>
            </div>
          </div>

          <!-- Bot√µes -->
          <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
            <%= link_to "Cancelar", @movie, class: "btn btn-secondary" %>
            <%= f.submit "üíæ Atualizar Filme", class: "btn btn-primary" %>
          </div>

        <% end %>

      </div>
    </div>

    <p class="text-muted mt-3"><small>* Campos obrigat√≥rios</small></p>

  </div>
</div>