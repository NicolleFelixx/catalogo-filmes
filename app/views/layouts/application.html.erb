<!DOCTYPE html>
<html>

  <head>
  <title>Cat√°logo de Filmes</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <meta name="turbo-visit-control" content="reload">

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>

  <body>
    <!-- Navbar -->
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <%= link_to "üé¨ Cat√°logo de Filmes", root_path, class: "navbar-brand" %>
        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse" id="navbarNav">
          
          <!-- FORMUL√ÅRIO DE BUSCA - NOVO! -->
          <form class="d-flex mx-auto my-2 my-lg-0" action="<%= movies_path %>" method="get">
            <input 
              class="form-control me-2" 
              type="search" 
              name="search" 
              placeholder="Buscar filmes..." 
              value="<%= params[:search] %>"
              style="width: 300px;">
            <button class="btn btn-outline-light" type="submit">üîç Buscar</button>
          </form>
          
          <!-- DROPDOWN DE CATEGORIAS - NOVO! -->
          <div class="dropdown ms-2 my-2 my-lg-0">
            <button class="btn btn-outline-light dropdown-toggle" type="button" id="categoryDropdown" data-bs-toggle="dropdown" aria-expanded="false">
              üìÇ Categorias
            </button>
            <ul class="dropdown-menu" aria-labelledby="categoryDropdown">
              <li>
                <%= link_to movies_path, class: "dropdown-item" do %>
                  <strong>Todas as Categorias</strong>
                  <span class="badge bg-secondary float-end"><%= Movie.count %></span>
                <% end %>
              </li>
              <li><hr class="dropdown-divider"></li>
              <% if @categories.present? %>
                <% @categories.each do |category| %>
                  <li>
                    <%= link_to movies_path(category_id: category.id), class: "dropdown-item" do %>
                      <%= category.name %>
                      <span class="badge bg-primary float-end"><%= category.movies.count %></span>
                    <% end %>
                  </li>
                <% end %>
              <% end %>
            </ul>
          </div>
          
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <%= link_to "Filmes", movies_path, class: "nav-link" %>
            </li>
            
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "Novo Filme", new_movie_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Meu Perfil", edit_user_registration_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= button_to "Sair", destroy_user_session_path, method: :delete, class: "btn btn-outline-light btn-sm ms-2" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Entrar", new_user_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Cadastrar", new_user_registration_path, class: "btn btn-primary btn-sm ms-2" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Mensagens Flash -->
    <div class="container mt-3">
      <% if notice %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>
      
      <% if alert %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= alert %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>
    </div>

    <!-- Conte√∫do Principal -->
    <main class="container my-4">
      <%= yield %>
    </main>

    <!-- Footer -->
      <footer class="bg-dark text-white text-center py-3 mt-5">
      <p class="mb-0">¬© 2025 Cat√°logo de Filmes - Desafio T√©cnico Main√¥</p>
    </footer>
    
    <!-- Bootstrap JavaScript - ADICIONE AQUI ‚Üì -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
  </body>
</html>